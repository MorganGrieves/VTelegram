{
    "manifest_version": 2,
    "name": "VTelegram",
    "description": "Importing your dialogs from VK to Telegram",
    "version": "0.0.1",
    "author": "Purple Team",
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [ "js/background.js" ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://vk.com/*", "http://vk.com/*"],
            "run_at": "document_end",
            "js": ["js/content.js"],
            "css": ["css/style.css"]
        }
    ],
    "permissions": [
        "tabs",
        "identity",
        "storage",
        "https://www.googleapis.com/*",
        "https://my.telegram.org/apps/*"
    ],
    "oauth2": {
        "client_id": "516717924129-pcm31all0chsqiktm1rrle98m0ekrbmm.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive"
        ]
    },
    "icons": {
        "128": "icon128.png"
    },
    "web_accessible_resources": [
        "res/images/*",
        "html/*"
    ]
}
